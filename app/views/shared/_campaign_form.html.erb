<%= form_for(@campaign) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.label :title %>
	<%= f.text_field :title, class: 'form-control' %>

	<%= f.label :purpose %>
	<%= f.text_field :purpose, class: 'form-control' %>
  
  <%= f.label :discussion_id %>
  <%= f.select(:discussion_id, 
  options_for_select(@discussions), class: "form-control") %>

  <p>
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list %>
  </p>

	<%= f.submit "Create Campaign", class: "btn btn-primary" %>
<% end %>