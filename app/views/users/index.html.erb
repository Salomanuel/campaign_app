<h1>All Users</h1>


<%= will_paginate %>
<table>
	<thead>
		<tr>
			<th>Username</th>
			<th>Email</th>
			<th>Status</th>
			<th>Profession</th>
			<th>Service</th>
			<th>Expert?</th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td> <%= link_to user.username, user_path(user) %> </td>
				<td> <%= user.email %> </td>
				<td> 
					<% case user.status 
						 when true %> 	<%= "qualified" %>
					 <% when false %> <%= "not qualified" %>
					 <% when nil %>		<%= "banned" %>
					<% end %>
				</td>
				<td> soon </td>
				<td> soon </td>
				<td class=<%= user.expert? %>> <%= user.expert? %> </td>
				<td> 
					<% if current_user.expert? && !user.expert? %>
						<%= form_for(user) do |f| %>
							<%= f.label :expert, "upgrade user status" %>
							<%= f.check_box :expert, :checked=> false %>
							<%= f.submit "confirm" %>
						<% end %>
					<% end %>	
			 </td>
			</tr>
		<% end %>
	</tbody>

</table>
<%= will_paginate %>

