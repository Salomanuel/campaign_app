<h1><%= @user.username %></h1>

<table>
	<thead>
		<tr>
			<th>Username</th>
			<th>Email</th>
			<th>Expert?</th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td> <%= link_to @user.username, user_path(@user) %> </td>
			<td> <%= @user.email %> </td>
			<td class=<%= @user.expert? %>> <%= @user.expert? %> </td>
		</tr>
	</tbody> 

</table>

<h3>Campaign</h3>
<% if @campaign.nil? %>
	<p>This user doesn't have any Campaigns yet</p>
<% else %>
	<%= link_to @campaign.first.title, @campaign.first %>
<% end %>